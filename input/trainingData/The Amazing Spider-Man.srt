496
00:35:55,106 --> 00:35:57,136
祝你

497
00:35:57,145 --> 00:35:58,800
生日

498
00:36:00,393 --> 00:36:02,093
快樂

499
00:36:02,100 --> 00:36:03,209
起來

500
00:36:04,886 --> 00:36:07,416
邁克斯

501
00:36:08,386 --> 00:36:15,827
祝我生日快樂

502
00:36:48,640 --> 00:36:52,330
